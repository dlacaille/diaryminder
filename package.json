{
  "name": "diaryminder",
  "version": "1.0.0",
  "description": "Companion for your matrix server helping you keep a diary with configurable prompts and schedules",
  "source": "index.ts",
  "module": "dist/diaryminder.mjs",
  "scripts": {
    "start": "node dist/diaryminder.mjs",
    "dev": "tsnd index.ts",
    "build": "parcel build"
  },
  "author": "Dominic Lacaille",
  "license": "ISC",
  "prettier": {
    "semi": false,
    "tabWidth": 2
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prefer-string-replace-all": "off",
      "unicorn/number-literal-case": "off",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  },
  "dependencies": {
    "matrix-bot-sdk": "^0.7.1",
    "node-schedule": "^2.1.1",
    "read-last-lines": "^1.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/node-schedule": "^2.1.6",
    "eslint": "^8.56.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "parcel": "^2.11.0",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^7.0.2"
  }
}
